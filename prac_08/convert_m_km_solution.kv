BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                background_color: (0.2, 0.2, 0.2, 1)
                color: (1, 1, 1, 1)
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                background_color: (0.2, 0.2, 0.2, 1)
                color: (1, 1, 1, 1)
                on_press: app.handle_increment(-1)
